@using CRUD_asp.netMVC.Models.Product
@model Products

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="picture" class="form-label"></label>
                <input asp-for="picture" class="form-control" />
                <span asp-validation-for="picture" class="text-danger"></span>
                <input asp-for="PicturePath" type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Created" class="form-label"></label>
                <input asp-for="Created" class="form-control" />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="manuID" class="form-label"></label>
                <select class="form-select" asp-for="manuID" asp-items="ViewBag.Manufactures as SelectList" aria-label="Default select example">
                    <option value="">Option Manu</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Types.Name" class="form-label"></label>
                <select class="form-select" asp-for="typeID" asp-items="ViewBag.ProtoType as SelectList">
                    <option value="">Option Type</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

