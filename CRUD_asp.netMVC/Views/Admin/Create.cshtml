@using CRUD_asp.netMVC.Models.Product
@model Products

@{
    ViewData["Title"] = "Create";
    var viewBrand = ViewBag.Brand as SelectList;
    var viewCate = ViewBag.Category as SelectList;
    var viewGender = ViewBag.Gender as SelectList;
}

<h1>Create</h1>
<hr />

<div class="container">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>

        @*   <div class="form-floating mb-3">
            <input asp-for="ID" name="ID" class="form-control" placeholder="Enter ID" required />
            <label asp-for="ID" class="form-label">Enter ID</label>
            <span class="text-danger" asp-validation-for="ID"></span>
        </div> *@

        <div class="form-floating mb-3">
            <input type="text" name="Name" class="form-control" placeholder="Enter Name" required />
            <label class="form-label">Enter Name</label>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="form-floating mb-3">
            <input name="picture" type="file" class="form-control" placeholder="Enter picture" required />
            <label class="form-label">Enter picture</label>
            <span class="text-danger" asp-validation-for="picture"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="text" name="Description" class="form-control" placeholder="Enter Description" required />
            <label class="form-label">Enter Description</label>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="number" name="Price" class="form-control" placeholder="Enter Price" required />
            <label class="form-label">Enter Price</label>
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="number" name="Quantity" class="form-control" placeholder="Enter Quantity" required />
            <label class="form-label">Enter Quantity</label>
            <span class="text-danger" asp-validation-for="Quantity"></span>
        </div>

        <div class="form-floating mb-3">
            <select asp-for="GenderID" asp-items="@viewGender" class="form-select">
                <option value="" disabled>Option Manu</option>
            </select>
            <label asp-for="GenderID" class="form-label">Enter Gender</label>
            <span asp-validation-for="GenderID"></span>
        </div>

          <div class="form-floating mb-3">
            <select asp-for="BrandID" asp-items="@viewBrand" class="form-select">
                <option value="" disabled>Option Manu</option>
            </select>
            <label asp-for="BrandID" class="form-label">Enter Brand</label>
            <span asp-validation-for="BrandID"></span>
        </div>

        <div class="form-floating mb-3">
            <select asp-for="CateID" asp-items="@viewCate" class="form-select">
                <option value="" disabled>Option Types</option>
            </select>
            <label asp-for="CateID" class="form-label">Enter Category</label>
            <span asp-validation-for="CateID"></span>
        </div>

        <div class="d-flex justify-content-center align-items-center">
            <button type="submit" value="Create" class="btn btn-outline-secondary my-3" style="width: 15%">Submit</button>
        </div>
    </form>
</div>


