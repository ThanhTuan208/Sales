@using CRUD_asp.netMVC.Models.ViewModels.Cart;
@using System.Globalization
@model CartViewModel
@{
}
<hr />
<link rel="stylesheet" href="~/css/load_address.css" asp-append-version="true" />

@Html.AntiForgeryToken()
<div class="address-form">
    <h1>Thông tin địa Chỉ</h1>

    <input type="hidden" id="id"/>

    <div class="form-row">
        <div class="form-group">
            <label for="recipientname">Tên người nhận</label>
            <input type="text" id="recipientname" class="form-control" placeholder="Nhập họ và tên" required />
        </div>
        <div class="form-group">
            <label for="phonenumber">Số điện thoại</label>
            <input type="tel" id="phonenumber" class="form-control" placeholder="Nhập số điện thoại" maxlength="11" required />
        </div>
    </div>
    <div class="form-group">
        <label for="street">Địa chỉ chi tiết</label>
        <textarea id="street" class="form-control" placeholder="Số nhà + tên đường" required></textarea>
    </div>
    <div class="form-row">
        <div class="form-group">
            <label for="province">Tỉnh/Thành phố</label>
            <select id="province" class="form-control" placeholder="Tỉnh/thành phố" required></select>
        </div>
        <div class="form-group">
            <label for="ward">Phường/Xã</label>
            <select id="ward" class="form-control" placeholder="Phường/xã" disabled required></select>
        </div>
    </div>
    <div class="form-group">
        <label for="fullLocation">Địa chỉ đầy đủ</label>
        <textarea id="fullLocation" class="form-control" readonly placeholder="Địa chỉ sẽ hiển thị ở đây"></textarea>
    </div>
    <div class="form-group checkbox-default">
        <label>
            <input type="checkbox" id="isdefault" value="true" />
            <span class="text-label">Đặt làm mặc định</span>
        </label>
    </div>

    <div class="d-flex justify-content-around align-items-center">
        <button id="btnAddressEdit" class="form-control deleteAddress m-2">Xóa</button>
        <button id="btnAddressEdit" class="form-control updateAddress m-2">Cập nhật</button>
        <button id="btnAddressEdit" class="form-control returnAddressList m-2">Quay lại</button>
    </div>
</div>

<script type="module" src="~/js/load_address.js" asp-append-version="true"></script>