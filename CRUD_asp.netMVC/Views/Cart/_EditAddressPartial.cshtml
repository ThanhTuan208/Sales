@using CRUD_asp.netMVC.Models.ViewModels.Cart;
@using System.Globalization
@model CartViewModel
@{
    var IsAddress = ViewBag.IsAddress;
}
<hr />
<link rel="stylesheet" href="~/css/load_address.css" asp-append-version="true" />

<div class="address-form">
    <h1>Chọn Địa Chỉ</h1>
    <div class="form-row">
        <div class="form-group">
            <label for="recipientName">Tên người nhận</label>
            <input type="text" id="recipientName" class="form-control" placeholder="Nhập tên" />
        </div>
        <div class="form-group">
            <label for="phoneNumber">Số điện thoại</label>
            <input type="text" id="phoneNumber" class="form-control" placeholder="Nhập số" />
        </div>
    </div>
    <div class="form-group">
        <label for="street">Địa chỉ chi tiết</label>
        <textarea id="street" class="form-control" placeholder="Số nhà + tên đường"></textarea>
    </div>
    <div class="form-row">
        <div class="form-group">
            <label for="province">Tỉnh/Thành phố</label>
            <select id="province" class="form-control" placeholder="Tỉnh/thành phố"></select>
        </div>
        <div class="form-group">
            <label for="ward">Phường/Xã</label>
            <select id="ward" class="form-control" placeholder="Phường/xã" disabled></select>
        </div>
    </div>
    <div class="form-group">
        <label for="fullLocation">Địa chỉ đầy đủ</label>
        <textarea id="fullLocation" class="form-control" readonly placeholder="Địa chỉ sẽ hiển thị ở đây"></textarea>
    </div>
    <div class="form-group">
        <button id="btnAddressEdit" class="form-control">Cập nhật</button>
    </div>
</div>

<script src="~/js/load_address.js" asp-append-version="true"></script>