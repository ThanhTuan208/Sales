@using CRUD_asp.netMVC.DTO.Auth
@model ForgotPassword
@{
    Layout = "_AuthLayout";
}

<form method="post" asp-controller="Auth" asp-action="ForgerPassword" class="form1">
    <div class="container my-5 p-4">
        <div class="row justify-content-center align-items-center"
             style="height: 81vh;">
            <div class="col-12 col-sm-8 col-md-6 col-lg-4 rounded-3 p-4">
                <h1 class="text-center" style="margin-bottom: 40px">QUÊN MẬT KHẨU</h1>

                <div class="input-group mb-3">
                    <div class="form-floating flex-grow-1">
                        <input asp-for="Email"
                               id="email"
                               class="form-control"
                               placeholder="Nhập Email" />
                        <label asp-for="Email">Nhập Email</label>
                    </div>
                    <button type="button" id="sendMailForget" class="bn5">Gửi</button>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>

                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-floating mb-3">
                            <input asp-for="Code"
                                   id="code"
                                   class="form-control"
                                   placeholder="Nhập mã" />
                            <label asp-for="Code" class="form-label ms-1">Mã mail</label>
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-lg-8">
                        <div class="form-floating mb-3">
                            <input asp-for="NewPass"
                                   id="newPass"
                                   class="form-control pass"
                                   placeholder="Nhập mật khẩu mới" />
                            <label for="" class="form-label ms-1">Mật khẩu mới</label>
                            <span asp-validation-for="NewPass" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <span asp-validation-for="InfoGeneral" class="text-danger"></span>

                @Html.AntiForgeryToken()

                <div class="d-grid mt-2">
                    <button type="button" id="newPassForget" class="bn5">Lưu</button>
                </div>
                <div class="d-flex justify-content-end mt-3">
                    <a asp-action="Login" class="text-dark my-2"><strong><span>Quay lại</span></strong></a>
                </div>
            </div>
        </div>
    </div>
</form>
