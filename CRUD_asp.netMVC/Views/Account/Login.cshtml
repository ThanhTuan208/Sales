@using CRUD_asp.netMVC.Models.Account.ActionViewModel
@model Login
@{
    var productID = ViewData["id"] as int?;
    var controller = "Account";
    var action = productID > 0 ? "LoginByProductID" : "Login";
    var ProductID = productID > 0 ? productID.ToString() : string.Empty;

    Layout = "_AccountLayout";
}

<form method="post" asp-controller="@controller" asp-action="@action" asp-route-productID="@ProductID" class="form1">
    <div class="container my-5">
        <div class="row justify-content-center align-items-center"
             style="height: 81vh;">
            <div class="col-12 col-sm-8 col-md-6 col-lg-4 rounded-3 p-4">
                <h1 class="text-center" style="margin-bottom: 40px">LOGIN</h1>
                <div class="form-floating my-3">
                    <input asp-for="Email"
                           class="form-control"
                           placeholder="Enter Email" 
                           required/>
                    <label for="" class="form-label ms-1">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating my-3">
                    <input asp-for="Password"
                           class="form-control"
                           placeholder="Enter Password" 
                           required />
                    <label for="" class="form-label ms-1">Mật khẩu</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between my-2 mb-3">
                    <div class="form-check ">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" for="" class="form-check-label">Nhớ đăng nhập</label>
                        <span asp-validation-for="RememberMe" class="text-danger"></span>
                    </div>
                    <div class="forget ">
                        <a asp-action="ForgotPassword" class="text-dark"><strong><span>Quên mật khẩu ?</span></strong></a>
                    </div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="bn5">Đăng nhập</button>
                </div>
                .<div class="d-flex justify-content-between">
                    <p>Bạn đã có tài khoản chưa ?</p>
                    <a asp-action="register" class="text-decoration text-dark"><strong><span>Đăng ký</span></strong></a>
                </div>

                <p class="w-100 text-center">&mdash; Hoặc đăng nhập với: &mdash;</p>
                
                <div class="copyright">

                    <div class="col-md-12 text-center"> 
                        <p>
                            <div class="text-center d-inline-block">
                                <a class="fh5co_display_table">
                                    <div class="fh5co_verticle_middle">
                                        <i class=""><img src="~/images/icon/icons8-google-30.png" alt="" /></i>
                                    </div>
                                </a>
                            </div>
                            <div class="text-center d-inline-block">
                                <a class="fh5co_display_table">
                                    <div class="fh5co_verticle_middle">
                                        <i class=""><img src="~/images/icon/icons8-facebook-30.png" alt="" /></i>
                                    </div>
                                </a>
                            </div>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>