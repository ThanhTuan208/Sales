@using CRUD_asp.netMVC.Models.ViewModels.Home;
@using System.Globalization
@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<header id="fh5co-header" class="fh5co-cover fh5co-cover-sm" role="banner" style="background-image:url(@Url.Content($"~/images/banner/contact-4ops_2.jpg"));">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center">
                <div class="display-t">
                    <div class="display-tc animate-box" data-animate-effect="fadeIn">
                        <h1>Liên hệ với chúng tôi </h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div id="fh5co-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-6 animate-box">
                <h3>Get In Touch</h3>
                <form id="contactForm" asp-action="Contact" method="post" autocomplete="off">
                    <div class="row form-group">
                        <div class="col-md-6">
                            <input type="text" id="fname" class="form-control" asp-for="MailContact.FirstName" placeholder="Tên của bạn">
                            <span asp-validation-for="MailContact.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <input type="text" id="lname" class="form-control" asp-for="MailContact.LastName" placeholder="Họ của bạn">
                            <span asp-validation-for="MailContact.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="email" id="email" class="form-control" asp-for="MailContact.Email" placeholder="Địa chỉ email tài khoản của bạn">
                            <span asp-validation-for="MailContact.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="text" id="subject" class="form-control" asp-for="MailContact.Subject" placeholder="Tiêu đề tin nhắn">
                            <span asp-validation-for="MailContact.Subject" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <textarea id="message" cols="30" rows="6" class="form-control" asp-for="MailContact.Message" placeholder="Nội dung tin nhắn"></textarea>
                            <span asp-validation-for="MailContact.Message" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="button" class="sendMess btn btn-primary mt-4">Send Message</button>
                    </div>
                </form>
            </div>
            <div class="col-md-5 col-md-push-1 animate-box">
                <div class="fh5co-contact-info">
                    <h3>Contact Information</h3>
                    <ul>
                        <li class="phone"><a href="tel://1234567920">+98 358986823</a></li>
                        <li class="email"><a href="mailto:nguyenthanhtuankrp1@gmail.com">nguyenthanhtuankrp1@gmail.com</a></li>
                        <li class="address">219/4 Đ.Lê Văn Chí, P.Linh Trung, TP.Thủ Đức, <br />TP.Hồ Chí Minh</li>
                        @* <li class="url"><a href="http://gettemplates.">gettemplates</a></li> *@
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>

@* <div id="map" class="animate-box" data-animate-effect="fadeIn"></div> *@

<div id="fh5co-started">
    <div class="container">
        <div class="row animate-box">
            <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                <h2>Newsletter</h2>
                <p>Just stay tune for our latest Product. Now you can subscribe</p>
            </div>
        </div>
        <div class="row animate-box">
            <div class="col-md-8 col-md-offset-2">
                <form class="form-inline">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Email">
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <button type="submit" class="btn btn-default btn-block">Subscribe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>