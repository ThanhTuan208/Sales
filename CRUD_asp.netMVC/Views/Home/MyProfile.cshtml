@using CRUD_asp.netMVC.ViewModels.Home
@using System.Globalization
@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "_HomeLayout";
    var User = Model.User;
    var IsMale = Model.User.Gender == "Nam" ? "checked" : "";
    var IsFeMale = Model.User.Gender == "Nữ" ? "checked" : "";
}

@Html.AntiForgeryToken()
<div class="profile-wrapper">
    <div class="profile-container">
        <aside class="sidebar">
            <nav>
                <ul>
                    <li><a href="#">Thông Báo</a></li>
                    <li><a href="#">Tài Khoản Của Tôi</a></li>
                    <li><a asp-controller="Home" asp-action="MyProfile">Hồ Sơ</a></li>
                    <li><a href="#">Địa Chỉ</a></li>
                    <li><a href="#">Đổi Mật Khẩu</a></li>
                    <li><a href="#">Nhật Ký</a></li>
                    <li><a href="#">Thông Tin Cá Nhân</a></li>
                    <li><a href="#">Kho Voucher</a></li>
                </ul>
            </nav>
        </aside>

        <main class="profile-content">
            <h2 style="font-weight: 600">Hồ Sơ Của Tôi</h2>

            <div class="profile-main">
                <!-- Form -->
                <section>
                    @{
                        <form class="profile-form">
                            <div class="form-group">
                                <label>Tên người dùng:</label>
                                <input type="text" id="username" value="@(User.UserName ?? "")" />
                            </div>
                            <div class="form-group">
                                <div class="d-flex gap-2">
                                    <label>Email:</label>
                                    <a href="" id="changeemail">Thay đổi</a>
                                </div>
                                <input type="email" id="email" value="@(User.Email ?? "")" readonly />
                            </div>
                            <div class="form-group">
                                <label>Số điện thoại:</label>
                                <input type="text" id="phone" value="@(User.PhoneNumber ?? "")" maxlength="10"/>
                            </div>
                            <div class="form-group">
                                <label>Ngày sinh:</label>
                                <input type="date" id="date" value="@(User != null ? User.DateOfBirth.ToString("yyyy-MM-dd") : DateTime.Now)" />
                            </div>
                            <div class="form-group gender-group">
                                <label>Giới tính:</label>
                                <input type="radio" name="gender" value="Nam" @IsMale /> Nam
                                <input type="radio" name="gender" value="Nữ" @IsFeMale /> Nữ
                            </div>
                            <button type="submit" class="btn-save-profile">Lưu</button>
                        </form>
                    }
                </section>

                <!-- Avatar -->
                <section class="avatar-section">
                    <img id="avatarpreview" src="@(User != null ? Url.Content($"~/{User.ProfileImage}") : "")" alt="" />
                    <input type="file"
                           id="avatarInput"
                           accept="image/*"
                           style="display: none" />

                    <!-- nút chọn ảnh -->
                    <button type="button" class="btn-select-image">
                        Chọn Ảnh
                    </button>
                </section>
            </div>
        </main>
    </div>
</div>